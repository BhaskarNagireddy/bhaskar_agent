# filepath: bhaskar_agent/tests/test_main.py
import pytest
from fastapi.testclient import TestClient
from app.main import app

client = TestClient(app)

def test_root():
    response = client.get("/")
    assert response.status_code == 200
    assert response.json() == {"message": "Welcome to Bhaskar Agent!"}  # Adjust based on actual root response

# Additional tests can be added here as the application develops.